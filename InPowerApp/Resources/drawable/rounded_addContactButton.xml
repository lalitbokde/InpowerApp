<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#252525" />
      <stroke
          android:width="1dp"
          android:color="#595959" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="5dp"
          android:right="10dp"
          android:bottom="5dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#252525"
          android:endColor="#595959"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#595959" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="5dp"
          android:right="10dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>